<Page x:Class="ST10039248_PROG6212.ApproveClaimsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ST10039248_PROG6212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApproveClaimsPage">

    <Grid Background="{StaticResource PrimaryColor}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Approve or Deny Claims" Foreground="{StaticResource TextColor}" FontSize="24"/>
            <ListView Name="PendingClaimsList" Background="{StaticResource SecondaryColor}" Foreground="{StaticResource TextColor}">
                <!-- Bind pending claims data here -->
            </ListView>
            <Button Content="Approve" Width="100" Margin="5" Click="ApproveClaim_Click"/>
            <Button Content="Deny" Width="100" Margin="5" Click="DenyClaim_Click"/>
        </StackPanel>
    </Grid>
</Page>
