<Page x:Class="ST10039248_PROG6212.SubmitClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ST10039248_PROG6212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubmitClaimPage">

    <Grid Background="{StaticResource PrimaryColor}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Submit a Claim" Foreground="{StaticResource TextColor}" FontSize="24"/>
            <TextBox Name="ClaimDescription" Width="300" Height="100" Margin="5" TextWrapping="Wrap" 
                     Background="{StaticResource SecondaryColor}" Foreground="{StaticResource TextColor}"/>
            <Button Content="Attach Document" Width="150" Margin="5" Click="AttachDocument_Click"/>
            <Button Content="Submit Claim" Width="150" Margin="5" Click="SubmitClaim_Click"/>
        </StackPanel>
        </Grid>
</Page>
